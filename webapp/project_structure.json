{
  "appJsFiles": ["src/main/javascript/app/**/*.js",
                 "src/main/javascript/controller/**/*.js",
                  "src/main/javascript/angularcontroller/**/*.js"],

  "libJsFiles": ["bower_components/angular/angular.js",
                  "bower_components/angular-resource/angular-resource.js",
                  "bower_components/angular-ui-router/release/angular-ui-router.js",
                  "bower_components/jquery/dist/jquery.js",
                  "bower_components/bootstrap/dist/js/bootstrap.js"],

  "htmlFiles": ["src/main/webapp/WEB-INF/index.html", "src/main/webapp/WEB-INF/templates/**/*.html"],

  "outputConcatAppJsPath": "src/main/webapp/WEB-INF/js/app.js",
  "outputConcatLibsJsPath": "src/main/webapp/WEB-INF/js/libs.js",

  "outputMinifyAppJsPath": "src/main/webapp/WEB-INF/js/app.min.js",
  "outputMinifyLibsJsPath": "src/main/webapp/WEB-INF/js/libs.min.js",

  "lessFiles": "src/main/less/**/*.less",

  "lessToCssFiles": {
    "src/main/webapp/WEB-INF/css/libs.css" : "src/main/less/libs.less",
    "src/main/webapp/WEB-INF/css/app.css" : ["src/main/less/**/app.less", "src/main/less/**/*View.less"]
  }
}